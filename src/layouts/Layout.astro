---
interface Props {
  title: string;
}
import TxWaitModal from "../components/TxWaitModal.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <TxWaitModal />
  </body>
  <style is:global>
    :root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        rgb(var(--accent-light)) 30%,
        white 60%
      );
    }
    html {
      font-family: system-ui, sans-serif;
      background: #13151a;
      background-size: 224px;
    }
    main {
      margin: auto;
      padding: 2rem;
      width: 80%;
      max-width: calc(100% - 2rem);
      color: white;
      font-size: 20px;
      line-height: 1.6;
      background: #1e1e1e;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
    button {
      border: 1px solid rgb(var(--accent));
      background-color: #6a0dad; /* Changed to a more purple color */
      background-image: var(--accent-gradient);
      background-size: 200%;
      border-radius: 7px;
      color: #3a3d44;
      cursor: pointer;
      font-size: 15px;
      padding: 0.75rem 1.5rem;
      margin: auto;
      background-position: 100%;
      transition:
        background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1),
        box-shadow 0.3s ease;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    button:is(:hover, :focus-within),
    button.active {
      color: white;
      background-position: 0;
      background-size: 200%;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }
    button:is(:disabled) {
      color: white;
      background: var(--accent-light);
      cursor: not-allowed;
    }

    button:is(:disabled).loading {
      background: linear-gradient(-45deg, #ffffff44, #ffffff22);
      background-size: 200%;
      animation: loading-gradient 4s linear infinite;
    }
    @keyframes loading-gradient {
      0% {
        background-position: 0% 50%;
      }
      100% {
        background-position: -200% 50%;
      }
    }
    .visually-hidden {
      clip: rect(0 0 0 0);
      clip-path: inset(50%);
      height: 1px;
      overflow: hidden;
      position: absolute;
      white-space: nowrap;
      width: 1px;
    }

    label {
      color: white;
    }

    strong {
      color: white;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      color: white;
    }

    /* Table Styles */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
      font-size: 0.875rem;
      background-color: #23262d;
      color: white;
      border-radius: 8px;
      overflow: hidden;
    }
    table th,
    table td {
      padding: 0.75rem;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    table th {
      background-color: #2c2f36;
      color: #fff;
    }
    table tr:nth-child(even) {
      background-color: #2c2f36;
    }
    table tr:hover {
      background-color: #3a3d44;
    }
    table a {
      color: #007bff;
      text-decoration: none;
    }
    table a:hover {
      text-decoration: underline;
    }

    .form-group {
      margin-bottom: 1rem;
    }
    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      color: white;
    }
    .form-group input,
    .form-group textarea {
      width: 100%;
      padding: 0.5rem;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .form-group textarea {
      resize: vertical;
    }

    @media (max-width: 460px) {
      main {
        padding: 0;
        width: 100%;
      }
      html {
        margin: 0;
        padding: 0;
      }
      body {
        margin: 0;
        padding: 0;
      }
    }
    
    @media (max-width: 420px) {
      .table-wrapper {
        overflow-x: auto;
      }
      table {
        width: 100%;
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }
      table th,
      table td {
        white-space: nowrap;
      }
    }
  </style>
</html>
